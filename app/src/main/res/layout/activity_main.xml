<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wiki_logo" />

        <Button
            android:id="@+id/characters_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/logo"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-70dp"
            android:text="LISTE DES PERSONNAGES"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/items_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/characters_list_button"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-70dp"
            android:text="ITEMS"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/home_visual" />


    </RelativeLayout>

</RelativeLayout>